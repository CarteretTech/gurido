---
import Layout from "../layouts/Layout.astro";
import services from "../data/services.json";

// Import our new section components
import Hero from "../components/sections/Hero.astro";
import Features from "../components/sections/Features.astro";
import Testimonials from "../components/sections/Testimonials.astro";

// Group services by category
const serviceCategories = {
  foundational: services.filter(service => service.category === "foundational"),
  "on-page": services.filter(service => service.category === "on-page"),
  technical: services.filter(service => service.category === "technical"),
  specialized: services.filter(service => service.category === "specialized")
};

// SEO metadata
const title = "CravenSEO | Local SEO Services for Eastern NC Businesses";
const description = "Dominate your local market with CravenSEO's specialized search engine optimization services for Eastern North Carolina businesses. Transparent pricing, measurable results.";
---

<Layout 
  title={title}
  description={description}
>
  <!-- Use our new Hero component -->
  <Hero />
  
  <!-- Trusted By Section -->
  <section class="py-12 bg-bg-secondary text-text-primary">
    <div class="container mx-auto px-6">
      <p class="text-center text-text-secondary mb-8 animate-on-scroll">Trusted by Eastern NC businesses</p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16">
        <div class="w-32 opacity-70 hover:opacity-100 transition-opacity animate-on-scroll">
          <img src="/images/clients/client-1.png" alt="Client logo" class="w-full grayscale hover:grayscale-0 transition-all">
        </div>
        <div class="w-32 opacity-70 hover:opacity-100 transition-opacity animate-on-scroll" data-aos-delay="100">
          <img src="/images/clients/client-2.png" alt="Client logo" class="w-full grayscale hover:grayscale-0 transition-all">
        </div>
        <div class="w-32 opacity-70 hover:opacity-100 transition-opacity animate-on-scroll" data-aos-delay="200">
          <img src="/images/clients/client-3.png" alt="Client logo" class="w-full grayscale hover:grayscale-0 transition-all">
        </div>
        <div class="w-32 opacity-70 hover:opacity-100 transition-opacity animate-on-scroll" data-aos-delay="300">
          <img src="/images/clients/client-4.png" alt="Client logo" class="w-full grayscale hover:grayscale-0 transition-all">
        </div>
      </div>
    </div>
  </section>
  
  <!-- Use our new Features component -->
  <Features />
  
  <!-- How It Works Section -->
  <section id="how-it-works" class="py-20 bg-bg-primary text-text-primary">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto text-center mb-16 animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          How We Help You Dominate <span class="text-gradient">Local Search</span>
        </h2>
        <p class="text-lg text-text-secondary">
          Our proven process combines data-driven SEO tactics with Eastern NC market expertise
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <!-- Process Steps -->
        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-0 md:left-1/2 top-0 bottom-0 w-0.5 bg-bg-tertiary transform md:translate-x-0 translate-x-7"></div>
          
          <!-- Step 1 -->
          <div class="relative flex flex-col md:flex-row items-start mb-12 animate-on-scroll">
            <div class="md:w-1/2 md:pr-12 md:text-right mb-6 md:mb-0">
              <h3 class="text-2xl font-bold mb-2">Discovery & Analysis</h3>
              <p class="text-text-secondary">We analyze your business, competitors, and target market to identify SEO opportunities unique to Eastern NC.</p>
            </div>
            <div class="bg-primary text-white dark:text-dark-background w-14 h-14 rounded-full flex items-center justify-center text-xl font-bold z-10 mb-4 md:mx-auto md:mb-0 shadow-md">1</div>
            <div class="md:w-1/2 md:pl-12 md:block hidden"></div>
          </div>
          
          <!-- Step 2 -->
          <div class="relative flex flex-col md:flex-row items-start mb-12 animate-on-scroll" data-aos-delay="100">
            <div class="md:w-1/2 md:pr-12 md:text-right md:block hidden"></div>
            <div class="bg-secondary text-white dark:text-dark-background w-14 h-14 rounded-full flex items-center justify-center text-xl font-bold z-10 mb-4 md:mx-auto md:mb-0 shadow-md">2</div>
            <div class="md:w-1/2 md:pl-12">
              <h3 class="text-2xl font-bold mb-2">Custom Strategy Development</h3>
              <p class="text-text-secondary">We create a tailored SEO plan targeting your specific business goals and local Eastern NC market.</p>
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="relative flex flex-col md:flex-row items-start mb-12 animate-on-scroll" data-aos-delay="200">
            <div class="md:w-1/2 md:pr-12 md:text-right">
              <h3 class="text-2xl font-bold mb-2">Implementation & Optimization</h3>
              <p class="text-text-secondary">Our team executes the strategy with precision, optimizing both on-site and off-site factors for maximum impact.</p>
            </div>
            <div class="bg-primary text-white dark:text-dark-background w-14 h-14 rounded-full flex items-center justify-center text-xl font-bold z-10 mb-4 md:mx-auto md:mb-0 shadow-md">3</div>
            <div class="md:w-1/2 md:pl-12 md:block hidden"></div>
          </div>
          
          <!-- Step 4 -->
          <div class="relative flex flex-col md:flex-row items-start animate-on-scroll" data-aos-delay="300">
            <div class="md:w-1/2 md:pr-12 md:text-right md:block hidden"></div>
            <div class="bg-secondary text-white dark:text-dark-background w-14 h-14 rounded-full flex items-center justify-center text-xl font-bold z-10 mb-4 md:mx-auto md:mb-0 shadow-md">4</div>
            <div class="md:w-1/2 md:pl-12">
              <h3 class="text-2xl font-bold mb-2">Monitoring & Growth</h3>
              <p class="text-text-secondary">We track results, provide transparent reporting, and continuously refine our approach to maximize your ROI.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Results Section -->
  <section id="results" class="py-20 bg-bg-secondary text-text-primary relative overflow-hidden">
    <!-- Background element with accent color but at low opacity -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-primary to-secondary"></div>
    </div>
    
    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-3xl mx-auto text-center mb-16 animate-on-scroll">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Results That <span class="text-gradient">Speak for Themselves</span>
        </h2>
        <p class="text-lg text-text-secondary">
          We've helped businesses across Eastern North Carolina achieve measurable growth
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-card-bg rounded-xl shadow-md p-8 text-center animate-on-scroll" data-aos="fade-up">
          <div class="text-5xl md:text-6xl font-bold mb-2 text-primary" data-count-to="73" data-count-duration="2000">73</div>
          <div class="text-xl font-medium mb-3">%</div>
          <p class="text-text-secondary">Average increase in organic search traffic for our clients</p>
        </div>
        
        <div class="bg-card-bg rounded-xl shadow-md p-8 text-center animate-on-scroll" data-aos="fade-up" data-aos-delay="200">
          <div class="text-5xl md:text-6xl font-bold mb-2 text-secondary" data-count-to="89" data-count-duration="2000">89</div>
          <div class="text-xl font-medium mb-3">%</div>
          <p class="text-text-secondary">Of our clients rank on the first page for their target keywords</p>
        </div>
        
        <div class="bg-card-bg rounded-xl shadow-md p-8 text-center animate-on-scroll" data-aos="fade-up" data-aos-delay="400">
          <div class="text-5xl md:text-6xl font-bold mb-2 text-accent" data-count-to="42" data-count-duration="2000">42</div>
          <div class="text-xl font-medium mb-3">%</div>
          <p class="text-text-secondary">Average increase in leads from organic search</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Use our new Testimonials component -->
  <Testimonials />
  
  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-bg-secondary text-text-primary">
    <div class="container mx-auto px-6">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <div class="animate-on-scroll">
            <h2 class="text-3xl md:text-4xl font-bold mb-6">
              Ready to Dominate <span class="text-gradient">Local Search?</span>
            </h2>
            <p class="text-lg text-text-secondary mb-6">
              Schedule a free consultation to discuss how our SEO services can help your Eastern NC business grow.
            </p>
            <div class="space-y-4">
              <div class="flex items-start">
                <div class="mt-1 text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h4 class="font-bold">Address</h4>
                  <p class="text-text-secondary">123 Main Street, New Bern, NC 28560</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="mt-1 text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h4 class="font-bold">Phone</h4>
                  <p class="text-text-secondary">(252) 555-1234</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="mt-1 text-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h4 class="font-bold">Email</h4>
                  <p class="text-text-secondary">info@cravenseo.com</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-card-bg rounded-xl shadow-md p-6 animate-on-scroll" data-aos="fade-up" data-aos-delay="200">
            <h3 class="text-2xl font-bold mb-6">Get in Touch</h3>
            <form>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-text-secondary mb-1">Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent bg-bg-primary text-text-primary"
                    placeholder="Your name"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-text-secondary mb-1">Email</label>
                  <input 
                    type="email" 
                    id="email" 
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent bg-bg-primary text-text-primary"
                    placeholder="your@email.com"
                  />
                </div>
              </div>
              <div class="mb-6">
                <label for="business" class="block text-sm font-medium text-text-secondary mb-1">Business</label>
                <input 
                  type="text" 
                  id="business" 
                  class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent bg-bg-primary text-text-primary"
                  placeholder="Your business name"
                />
              </div>
              <div class="mb-6">
                <label for="message" class="block text-sm font-medium text-text-secondary mb-1">Message</label>
                <textarea 
                  id="message" 
                  rows="4" 
                  class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent bg-bg-primary text-text-primary"
                  placeholder="How can we help you?"
                ></textarea>
              </div>
              <button 
                type="submit" 
                class="btn btn-primary w-full py-3"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>


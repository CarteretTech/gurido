---
import { designwork } from "../../data/designwork.json";
import { devwork } from "../../data/devwork.json";
---

<section class="lg:p-8 scroll-mt-24" id="services">
  <div
    class="mx-auto 2xl:max-w-7xl py-12 lg:px-16 md:px-12 px-8 xl:px-40 items-center w-full "
  >
    <h2 class="text-3xl tracking-tighter font-light lg:text-4xl text-white">
      Exploring a diverse range of comprehensive <span
        class="md:block text-zinc-400"
        >services to elevate your brand presence
      </span>
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-12 mt-12">
      <div>
        <p class="text-2xl text-white">Design</p>
        <div class="divide-y mt-6 divide-white/10 border-y border-white/10">
          {
            designwork.map((template) => (
              <>
                <div class="py-2 flex flex-col sm:flex-row justify-between gap-4 lg:items-end">
                  <p class="font-medium leading-6 text-white text-sm flex gap-2 items-center">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-4 h-4 icon icon-tabler icon-tabler-circle-check-filled text-white/50"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <>
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path
                          d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
                          stroke-width="0"
                          fill="currentColor"
                        />
                      </>
                    </svg>
                    {template.title}
                  </p>
                </div>
              </>
            ))
          }
        </div>
      </div>
      <div>
        <p class="text-2xl text-white">Development</p>
        <div class="divide-y divide-white/10 mt-6 border-y border-white/10">
          {
            devwork.map((template) => (
              <>
                <div class="py-2 flex flex-col sm:flex-row justify-between gap-4 lg:items-end">
                  <p class="font-medium leading-6 text-white text-sm flex gap-2 items-center">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="w-4 h-4 icon icon-tabler icon-tabler-circle-check-filled text-white/50"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <>
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path
                          d="M17 3.34a10 10 0 1 1 -14.995 8.984l-.005 -.324l.005 -.324a10 10 0 0 1 14.995 -8.336zm-1.293 5.953a1 1 0 0 0 -1.32 -.083l-.094 .083l-3.293 3.292l-1.293 -1.292l-.094 -.083a1 1 0 0 0 -1.403 1.403l.083 .094l2 2l.094 .083a1 1 0 0 0 1.226 0l.094 -.083l4 -4l.083 -.094a1 1 0 0 0 -.083 -1.32z"
                          stroke-width="0"
                          fill="currentColor"
                        />
                      </>
                    </svg>
                    {template.title}
                  </p>
                </div>
              </>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
